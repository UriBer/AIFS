#!/usr/bin/env python3
"""AIFS CLI wrapper script.

This script provides a convenient way to run the AIFS CLI without typing 'python'.
"""

import sys
import os

# Add the current directory to Python path
sys.path.insert(0, os.path.dirname(os.path.abspath(__file__)))

# Import and run the CLI
from aifs_cli import app

if __name__ == "__main__":
    app()
